<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/loginbgnd"
    tools:context=".Admin_folder.Admin_form">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/black"
            android:alpha="0.7">

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nocolor_radius"
            android:text="If the supplier forget password write the name of the supplier then will give the password"
            android:textSize="20dp"
            android:textColor="@color/Wight"
            android:gravity="center"
            android:padding="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_background"
            android:backgroundTint="@color/black"
            android:alpha="0.5">

        </LinearLayout>
        <EditText
            android:id="@+id/supplierforget"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/nocolor_radius"
            android:hint="Tap here to write supplier name"
            android:textColorHint="@color/wight1"
            android:layout_marginTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="30dp"/>

        <TextView
            android:id="@+id/belowtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nocolor_radius"
            android:layout_below="@+id/supplierforget"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:text="result for supplier password"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Wight"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nocolor_radius"
            android:layout_below="@+id/belowtxt"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="result for supplier password"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Wight"
            android:gravity="center"
            />

        <Button
            android:onClick="get_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="Get password"
            android:textColorHint="@color/Wight"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/radius_sign_us"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:onClick="home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/home">

            <ImageView
                android:id="@+id/homeimgv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_home_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:onClick="list_of_supplier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/supplierimgview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/list_of_supplier" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supliers"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <LinearLayout
            android:onClick="add_supplier_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/addimgview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src = "@drawable/add_supplier_icon"
                android:backgroundTint="@color/black"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="add supplier"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
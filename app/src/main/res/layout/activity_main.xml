<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/images"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Eprocuring App"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/text_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/black1"
            android:textStyle="bold"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:textSize="32dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:background="@drawable/radius_right"
            android:layout_alignParentLeft="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:paddingLeft="30dp"
                android:background="@drawable/password"
                android:hint="Username"
                android:textColorHint="@color/black1"/>

            <EditText
                android:id="@+id/Password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:paddingLeft="30dp"
                android:background="@drawable/username"
                android:hint="Password"
                android:textColorHint="@color/black1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_login"
                android:layout_marginLeft="190dp"
                android:onClick="login_btn"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Forget Password ?"
            android:textColor="@color/black1"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="0dp"
            android:textSize="12dp"
            />

        <Button
            android:id="@+id/admin_register"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/radius_right"
            android:backgroundTint="@color/wight1"
            android:hint="Register"
            android:textColorHint="@color/bluepink"
            android:layout_marginTop="90dp"
            android:onClick="resta_supp_reg"/>
    </LinearLayout>

</RelativeLayout>